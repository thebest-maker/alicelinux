name=linux-headers
version=6.6.30
release=1
source="https://cdn.kernel.org/pub/linux/kernel/v6.x/linux-$version.tar.xz"
keep_static=1

build() {
	make mrproper
	make headers
	find usr/include -name '.*' -delete
	rm usr/include/Makefile
	mkdir -p $PKG/usr/include
	cp -rv usr/include/* $PKG/usr/include
}
