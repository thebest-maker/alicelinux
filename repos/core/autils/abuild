name=autils
version=20240830
_commit=1301d84c0cf6c991998288e65e904973700c04b0
release=1
source="$name-$_commit.tar.gz::https://codeberg.org/emmett1/autils/archive/$_commit.tar.gz"

build() {
	mkdir -p $PKG/usr/bin $PKG/etc $PKG/usr/share
	for i in *; do
		[ -d $i ] && continue
		case $i in
			README*|LICENSE|*.sh);;
			*.conf) install -Dm644 $i $PKG/etc/$i;;
			     *) install -Dm755 $i $PKG/usr/bin/$i;;
		esac
	done
	cp -r doc/man $PKG/usr/share
}
