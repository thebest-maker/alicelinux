name=nodejs
version=22.5.1
release=1
source="https://$name.org/dist/v$version/node-v$version.tar.xz"

build() {
	./configure --prefix=/usr          \
	            --shared-cares         \
	            --shared-libuv         \
	            --shared-openssl       \
	            --shared-nghttp2       \
	            --shared-zlib          \
	            --with-intl=system-icu
	make
	make install
}
