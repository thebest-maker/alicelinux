./configure \
	--prefix=/usr \
	--enable-gpl \
	--enable-version3 \
	--enable-nonfree \
	--enable-shared \
	--disable-debug \
	--enable-libaom \
	--enable-libass \
	--enable-libfdk-aac \
	--enable-libfreetype \
	--enable-libmp3lame \
	--enable-libopus \
	--enable-libtheora \
	--enable-libvorbis \
	--enable-libvpx \
	--enable-libx264 \
	--enable-libx265 \
	--enable-openssl
make
make install
