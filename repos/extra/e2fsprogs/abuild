name=e2fsprogs
version=1.47.1
release=1
source="https://downloads.sourceforge.net/project/$name/$name/v$version/$name-$version.tar.gz"
build_opt="
	--with-root-prefix=
	--enable-elf-shlibs
	--enable-libblkid
	--enable-libuuid
	--disable-uuidd
	--disable-fsck
	--disable-fuse2fs
"

prebuild() {
	sed 's|my_llseek|llseek|g' -i lib/blkid/llseek.c
}
