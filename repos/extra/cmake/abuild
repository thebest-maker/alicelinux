name=cmake
version=3.29.6
release=1
source="https://$name.org/files/v${version%.*}/$name-$version.tar.gz"
build_opt="--system-libs"
build_type="configure_build"


build() {
	./configure \
	        --prefix=/usr \
		--system-curl \
		--system-expat \
		--system-zlib \
		--system-bzip2 -- \
		-DBUILD_CursesDialog=OFF
	make
	make install
	rm -r $PKG/usr/doc
}
