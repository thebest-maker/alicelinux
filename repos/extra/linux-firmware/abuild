name=linux-firmware
version=20250509
release=1
source="https://gitlab.com/kernel-firmware/linux-firmware/-/archive/$version/linux-firmware-$version.tar.gz"

build() {
	make install

	# make separate port for them
	for i in amd* radeon brcm cypress nvidia qcom netronome mellanox mrvl; do
	        rm -rf $PKG/lib/firmware/$i
	done

	# fix broken symlinks
	for f in $(find $PKG -type l); do
		#[ -e $f ] || continue
		p=$(readlink $f) || continue
		p=$(echo $p | sed "s:$PKG::")
		ln -svf $p $f
	done
}
